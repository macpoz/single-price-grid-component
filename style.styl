@import url('https://fonts.googleapis.com/css2?family=Karla:wght@400;700&display=swap');

// Primary
$cyan = hsl(179, 62%, 43%)
$bright-yellow = hsl(71, 73%, 54%)

//Neutral

$light-gray = hsl(204, 43%, 93%)
$grayish-blue = hsl(218, 22%, 67%)

$border-radius = .5rem

*
  margin 0
  padding 0
  font-family 'Karla', sans-serif

body
  display flex
  min-height 100vh
  justify-content center
  align-items center
  background-color $light-gray

.container
  display flex
  justify-content center
  align-items center
  flex-direction column
  width 310px
  margin 4.75rem 2rem
  box-shadow 0 0 20px 0 rgba(black,0.1)
  @media(min-width 768px)
    max-width 635px
    width auto

  header
    background-color white
    border-top-left-radius $border-radius
    border-top-right-radius $border-radius
    padding 1.7rem 1.5rem
    @media(min-width 768px)
      padding 2.5rem

    h1
      color $cyan
      font-size 20px
      font-weight 700
      margin-bottom 1.5rem

      @media(min-width 768px)
        font-size 24px

    h2
      color $bright-yellow
      font-size 17px
      font-weight 700
      margin-bottom 1rem
      line-height 1.5em
      letter-spacing: -0.07em;

      @media(min-width 768px)
        font-size 18px
        letter-spacing normal
        margin-bottom 0.5rem

    p
      color $grayish-blue
      font-size 14px
      line-height 1.7em
      letter-spacing: -0.01em;
      margin-bottom .9rem

      @media(min-width 768px)
        font-size 16px
        letter-spacing normal
        margin-bottom 0


  .inner-container
    width 100%
    color white
    display flex
    flex-direction column
    @media(min-width 768px)
      flex-direction row

    main
      padding 1.5rem
      background-color $cyan

      @media(min-width 768px)
        padding 2.5rem
        width 50%
        border-bottom-left-radius $border-radius


      h2
        font-size 18px
        margin-bottom 1.2rem

      .price
        font-size 16px
        display flex
        align-items center
        color rgba(white,.5)

        span
          font-size 32px
          margin-right .7rem
          font-weight 700
          color white

      p
        font-size 15px
        margin-top .75rem
        margin-bottom 1.5rem

      button
        background-color $bright-yellow
        border none
        padding 1rem 0
        width 100%
        color white
        border-radius 0.4rem
        box-shadow 0 5px 5px 0 rgba(black,0.2)
        font-size 16px
        &:hover
          background-color darken($bright-yellow,20%)
          cursor pointer

    footer
      padding 1.5rem
      background-color rgba($cyan,.85)
      border-bottom-left-radius $border-radius
      border-bottom-right-radius $border-radius
      color $light-gray

      @media(min-width 768px)
        padding 2.5rem
        width 50%
        border-bottom-left-radius 0

      h3
        margin-bottom 1rem

      ul
        list-style none
        opacity 85%

        li
          font-size 14px
          margin-bottom .2rem
